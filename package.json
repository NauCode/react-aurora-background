{
  "name": "@nauverse/react-aurora-background",
  "version": "1.0.1",
  "private": false,
  "license": "MIT",
  "description": "ðŸŒŒ React Aurora background component. Lightweight, customizable, beautiful.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build:esm": "tsc -p tsconfig.json && echo '{ \"type\": \"module\" }' > dist/esm/package.json",
    "build:cjs": "tsc -p tsconfig-cjs.json && echo '{ \"type\": \"commonjs\" }' > dist/cjs/package.json",
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run build:docs",
    "start": "npm run build:docs && npx http-server docs/",
    "build:docs": "npx ts-node scripts/buildDocs.ts",
    "publish": "npm publish --access public"
  },
  "devDependencies": {
    "@types/node": "^18.11.11",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "css-tree": "^2.3.0",
    "esbuild": "^0.16.2",
    "esbuild-css-modules-plugin": "^2.6.3",
    "prettier": "^2.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-github-corner": "^2.5.0",
    "typescript": "^4.9.4",
    "typescript-plugin-css-modules": "^4.1.1"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NauCode/react-aurora-background"
  },
  "bugs": {
    "url": "https://github.com/NauCode/react-aurora-background/issues",
    "email": "al@nauverse.com"
  },
  "keywords": [
    "react",
    "aurora",
    "background"
  ],
  "author": "Al | @thenaubit <al@nauverse.com> (https://nauverse.com)",
  "homepage": "",
  "files": [
    "dist/",
    "CHANGELOG.md"
  ],
  "directories": {
    "doc": "docs"
  }
}
